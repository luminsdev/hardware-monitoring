{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hardware Monitor",
  "version": "0.1.0",
  "identifier": "com.giahu.hardware-monitor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Hardware Monitor",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "visible": true
      },
      {
        "label": "mini",
        "title": "Mini Monitor",
        "url": "index.html?window=mini",
        "width": 320,
        "height": 160,
        "minWidth": 280,
        "minHeight": 140,
        "maxWidth": 400,
        "maxHeight": 220,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "x": 20,
        "y": 20
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],

    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null
      }
    }
  }
}
